#!/bin/bash

# Caddie Help Data Structure
# This file manages the global CADDIE_MODULE_HELP array and provides methods for manipulation

# Global module help array
CADDIE_MODULE_HELP=()

# Add help information for a module
caddie_help_append() {
    local module="$1"
    local description="$2"
    if [ -n "$module" ] && [ -n "$description" ]; then
        CADDIE_MODULE_HELP+=("${module}|${description}")
    fi
}

# Get all help information from the array
caddie_help_get() {
    echo "${CADDIE_MODULE_HELP[@]}"
}

# Reset the help array to empty
caddie_help_reset() {
    CADDIE_MODULE_HELP=()
}

# Export functions for external use
export -f caddie_help_append
export -f caddie_help_get
export -f caddie_help_reset
