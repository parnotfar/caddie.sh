# Utility functions
function caddie_cli_usage() {
    local text="$1"
    # caddie:lint:disable
    echo "${BOLD}${BLUE}Usage: ${text}${RESET}"
    # caddie:lint:enable
    return 0
}

function caddie_cli_installed() {
    # caddie:lint:disable
    echo "${BOLD}${BLUE}installed${RESET}"
    # caddie:lint:enable
    return 0
}

function caddie_cli_complete() {
    # caddie:lint:disable
    echo "${BOLD}${BLUE}complete${RESET}"
    # caddie:lint:enable
    return 0
}

function caddie_cli_title() {
    local text="$1"
    # caddie:lint:disable
    echo "${BOLD}${GREEN}== ${text} ==${RESET}"
    # caddie:lint:enable
    return 0
}

function caddie_cli_colorlist() {
    # caddie:lint:disable
    echo "${BOLD}BOLD${RESET}"
    echo "${RED}RED${RESET}"
    echo "${GREEN}GREEN${RESET}"
    echo "${YELLOW}YELLOW${RESET}"
    echo "${BLUE}BLUE${RESET}"
    echo "${PURPLE}PURPLE${RESET}"
    echo "${CYAN}CYAN${RESET}"
    echo "${GREY}GREY${RESET}"
    echo "${ORANGE}ORANGE${RESET}"
    echo "${WHITE}WHITE${RESET}"
    echo "${WHITE}RESET${RESET}"
    # caddie:lint:enable
    return 0
}

# UTF-8 character utility functions
function caddie_cli_check() {
    local text="$1"
    # caddie:lint:disable
    echo "${GREEN}‚úì ${text}${RESET}"
    # caddie:lint:enable
    return 0
}

function caddie_cli_x() {
    local text="$1"
    # caddie:lint:disable
    echo "${RED}‚úó ${text}${RESET}"
    # caddie:lint:enable
    return 0
}

function caddie_cli_arrow() {
    local text="$1"
    # caddie:lint:disable
    echo "${YELLOW}‚Üí ${text}${RESET}"
    # caddie:lint:enable
    return 0
}

function caddie_cli_folder() {
    local text="$1"
    # caddie:lint:disable
    echo "${BLUE}üìÅ ${text}${RESET}"
    # caddie:lint:enable
    return 0
}

