function caddie_cli_magnifying_glass() {
    local text="$1"
    # caddie:lint:disable
    echo "${BLUE}üîç ${text}${RESET}"
    # caddie:lint:enable
    return 0
}

function caddie_cli_blank() {
    # caddie:lint:disable
    echo ""
    # caddie:lint:enable
    return 0
}

function caddie_cli_indent() {
    local text="$1"
    # caddie:lint:disable
    echo "  ${text}"
    # caddie:lint:enable
    return 0
}

function caddie_cli_help() {
    caddie cli:usage "caddie cli:<command> [text]"
    caddie cli:blank
    caddie cli:title "Color Commands:"
    caddie cli:indent "red <text>              - Print text in red"
    caddie cli:indent "green <text>            - Print text in green"
    caddie cli:indent "yellow <text>           - Print text in yellow"
    caddie cli:indent "blue <text>             - Print text in blue"
    caddie cli:indent "purple <text>           - Print text in purple"
    caddie cli:indent "cyan <text>             - Print text in cyan"
    caddie cli:indent "grey <text>             - Print text in grey"
    caddie cli:indent "orange <text>           - Print text in orange"
    caddie cli:indent "white <text>            - Print text in white"
    caddie cli:blank
    caddie cli:title "Bold Color Commands:"
    caddie cli:indent "red:bold <text>         - Print text in bold red"
    caddie cli:indent "green:bold <text>       - Print text in bold green"
    caddie cli:indent "yellow:bold <text>      - Print text in bold yellow"
    caddie cli:indent "blue:bold <text>        - Print text in bold blue"
    caddie cli:indent "purple:bold <text>      - Print text in bold purple"
    caddie cli:indent "cyan:bold <text>        - Print text in bold cyan"
    caddie cli:indent "grey:bold <text>        - Print text in bold grey"
    caddie cli:indent "orange:bold <text>      - Print text in bold orange"
    caddie cli:indent "white:bold <text>       - Print text in bold white"
    caddie cli:blank
    caddie cli:wrench "Utility Commands:"
    caddie cli:indent "usage <text>            - Print usage text in blue"
    caddie cli:indent "installed               - Print 'installed' in blue"
    caddie cli:indent "complete                - Print 'complete' in blue"
    caddie cli:indent "title <text>            - Print title with green formatting"
    caddie cli:indent "colorlist               - List all available colors"
    caddie cli:indent "indent <text>           - Print text with 2-space indentation"
    caddie cli:blank
    caddie cli:magnifying_glass "UTF-8 Character Commands:"
    caddie cli:indent "check <text>            - Print ‚úì with green text"
    caddie cli:indent "x <text>                - Print ‚úó with red text"
    caddie cli:indent "arrow <text>            - Print ‚Üí with yellow text"
    caddie cli:indent "folder <text>           - Print üìÅ with blue text"
    caddie cli:indent "beer <text>             - Print üç∫ with blue text"
    caddie cli:indent "snake <text>            - Print üêç with blue text"
    caddie cli:indent "crab <text>             - Print ü¶Ä with blue text"
    caddie cli:indent "trash <text>            - Print üóëÔ∏è with blue text"
    caddie cli:indent "rotate <text>           - Print üîÑ with blue text"
    caddie cli:indent "chart <text>            - Print üìä with blue text"
    caddie cli:indent "magnify <text>          - Print üîç with blue text"
    caddie cli:indent "save <text>             - Print üíæ with blue text"
    caddie cli:indent "warning <text>          - Print ‚ö† with yellow text"
    caddie cli:indent "debug <text>            - Print üêõ with cyan text"
    caddie cli:indent "wrench <text>           - Print üîß with blue text"
    caddie cli:indent "whale <text>            - Print üê≥ with blue text"
    caddie cli:indent "package <text>          - Print üì¶ with blue text"
    caddie cli:indent "git <text>              - Print üåê with blue text"
    caddie cli:indent "rocket <text>           - Print üöÄ with blue text"
    caddie cli:indent "thought <text>          - Print üí° with blue text"
    caddie cli:indent "lightbulb <text>        - Print üí° with blue text"
    caddie cli:indent "magnifying_glass <text> - Print üîç with blue text"
    caddie cli:indent "blank                   - Print empty line"
    caddie cli:blank
    caddie cli:thought "  help                    - Show this help message"
    return 0
}

# Export all functions
export -f caddie_cli_description
export -f caddie_cli_red caddie_cli_green caddie_cli_yellow caddie_cli_blue caddie_cli_purple caddie_cli_cyan caddie_cli_grey caddie_cli_orange caddie_cli_white
export -f caddie_cli_red_bold caddie_cli_green_bold caddie_cli_yellow_bold caddie_cli_blue_bold caddie_cli_purple_bold caddie_cli_cyan_bold caddie_cli_grey_bold caddie_cli_orange_bold caddie_cli_white_bold
export -f caddie_cli_usage caddie_cli_installed caddie_cli_complete caddie_cli_title caddie_cli_colorlist caddie_cli_help
export -f caddie_cli_check caddie_cli_x caddie_cli_arrow caddie_cli_folder caddie_cli_beer caddie_cli_snake caddie_cli_crab caddie_cli_trash caddie_cli_rotate caddie_cli_chart caddie_cli_magnify caddie_cli_save caddie_cli_warning caddie_cli_debug
export -f caddie_cli_wrench caddie_cli_whale caddie_cli_package caddie_cli_git caddie_cli_rocket caddie_cli_thought caddie_cli_lightbulb caddie_cli_magnifying_glass caddie_cli_blank caddie_cli_indent