#!/bin/bash

# Caddie Commands Data Structure
# This file manages the global CADDIE_COMMANDS array and provides methods for manipulation

# Global commands array
CADDIE_COMMANDS=()

# Add a command to the commands array
function caddie_commands_append() {
    local cmd_info="$1"

    if [ -n "$cmd_info" ]; then
        CADDIE_COMMANDS+=("$cmd_info")
    fi
}

# Get all commands from the array
function caddie_commands_get() {
    printf '%s\n' "${CADDIE_COMMANDS[@]}"
}

# Get the count of commands in the array
function caddie_commands_count() {
    printf '%s\n' "${#CADDIE_COMMANDS[@]}"
}

# Reset the commands array to empty
function caddie_commands_reset() {
    CADDIE_COMMANDS=()
}

# Export functions for external use
export -f caddie_commands_append
export -f caddie_commands_get
export -f caddie_commands_count
export -f caddie_commands_reset
